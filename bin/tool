#!/bin/bash
##
# The script to run Java components.
#
# Environment Variables
#
#   EILFEDWEB_HEAPSIZE  The maximum amount of heap to use, in MB. 
#                   Default is 1024.
#
#   EILFEDWEB_OPTS      Extra Java runtime option.
#

# resolve links - $0 may be a softlink
THIS="$0"
while [ -h "$THIS" ]; do
  ls=`ls -ld "$THIS"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '.*/.*' > /dev/null; then
    THIS="$link"
  else
    THIS=`dirname "$THIS"`/"$link"
  fi
done

# if no args specified, show usage
if [ $# = 0 ]; then
  echo "Usage: run COMMAND [COMMAND options]"
  echo "where COMMAND is one of:"
  echo "  goracompiler               Run Compiler"
  echo "  querymanager               Run the query manager"
  echo " or"
  echo " MODULE CLASSNAME   run the class named CLASSNAME in module MODULE"
  echo "Most commands print help when invoked w/o parameters."
  exit 1
fi

# get arguments
COMMAND=$1
shift

# some directories
THIS_DIR=`dirname "$THIS"`
EILFEDWEB_HOME=`cd "$THIS_DIR/.." ; pwd`

if [ -f "${EILFEDWEB_HOME}/conf/gora-env.sh" ]; then
  . "${EILFEDWEB_HOME}/conf/gora-env.sh"
fi

if [ "$JAVA_HOME" = "" ]; then
  echo "Error: JAVA_HOME is not set."
  exit 1
fi

JAVA=$JAVA_HOME/bin/java
JAVA_HEAP_MAX=-Xmx1024m 

# check envvars which might override default args
if [ "$EILFEDWEB_HEAPSIZE" != "" ]; then
  #echo "run with heapsize $EILFEDWEB_HEAPSIZE"
  JAVA_HEAP_MAX="-Xmx""$EILFEDWEB_HEAPSIZE""m"
  #echo $JAVA_HEAP_MAX
fi

# CLASSPATH initially contains $EILFEDWEB_CONF_DIR, or defaults to $EILFEDWEB_HOME/conf
CLASSPATH=${EILFEDWEB_CONF_DIR:=$EILFEDWEB_HOME/conf}
CLASSPATH=${CLASSPATH}:$JAVA_HOME/lib/tools.jar

# so that filenames w/ spaces are handled correctly in loops below
IFS=

# restore ordinary behaviour
unset IFS

# default log directory & file
if [ "$EILFEDWEB_LOG_DIR" = "" ]; then
  EILFEDWEB_LOG_DIR="$EILFEDWEB_HOME/logs"
fi
if [ "$EILFEDWEB_LOGFILE" = "" ]; then
  EILFEDWEB_LOGFILE='gora.log'
fi

if [ "x$JAVA_LIBRARY_PATH" != "x" ]; then
  JAVA_OPTS="$JAVA_OPTS -Djava.library.path=$JAVA_LIBRARY_PATH"
fi

#EILFEDWEB_OPTS="$EILFEDWEB_OPTS -Dhadoop.log.dir=$EILFEDWEB_LOG_DIR"
#EILFEDWEB_OPTS="$EILFEDWEB_OPTS -Dhadoop.log.file=$EILFEDWEB_LOGFILE"

# figure out which class to run
if [ "$COMMAND" = "goracompiler" ] ; then
  MODULE=lib
  CLASSPATH=$CLASSPATH:$EILFEDWEB_HOME/$MODULE/
  CLASS=org.apache.gora.compiler.GoraCompiler
elif [ "$COMMAND" = "querymanager" ] ; then
  MODULE=target
  CLASSPATH=$CLASSPATH:$EILFEDWEB_HOME/$MODULE/classes/
  CLASS=edu.stanford.eil.query.QueryManager
else
  MODULE="$COMMAND"
  CLASS=$1
  shift
fi

SAVEIFS=$IFS
IFS=$(echo -en "\n\b")
# add libs to CLASSPATH
for f in $EILFEDWEB_HOME/lib/*.jar; do
  CLASSPATH=${CLASSPATH}:$f;
done

for f in $EILFEDWEB_HOME/target/*.jar; do
  CLASSPATH=${CLASSPATH}:$f;
done
IFS=$SAVEIFS

CLASSPATH=${CLASSPATH}:$EILFEDWEB_HOME/$MODULE/target/classes/
CLASSPATH=${CLASSPATH}:$EILFEDWEB_HOME/$MODULE/target/test-classes/

CLASSPATH=${CLASSPATH}:$EILFEDWEB_HOME/conf
#Can be used if we add more modules ar a later date
#CLASSPATH=${CLASSPATH}:$EILFEDWEB_HOME/$MODULE/conf

# run it
exec "$JAVA" $JAVA_HEAP_MAX $JAVA_OPTS $EILFEDWEB_OPTS -classpath "$CLASSPATH" $CLASS "$@"
